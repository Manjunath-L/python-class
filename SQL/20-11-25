-- WQTD DETAILS OF THE CUSTOMER WHO ORDER SOME PRODUCT

SELECT  *
FROM customer
WHERE PRODUCT_ID IN (SELECT PRODUCT_ID
                    FROM product );

SELECT * FROM customer
WHERE PRODUCT_ID IS NOT NULL;


SELECT  *
FROM customer
WHERE ORDER_ID IN (SELECT ORDER_ID
                    FROM orders );

SELECT * FROM customer
WHERE ORDER_ID IS NOT NULL;

-- WQTD DETAILS OF THE EMP WHO ARE GETING SAL MORE THAN ALL THE SALESMAN
SELECT * 
FROM emp
WHERE SAL > ALL(
    SELECT SAL 
    FROM emp
    WHERE JOB = "SALESMAN"
)
-- WQTD DETAILS OF THE EMP WHO ARE GETING SAL MORE THAN ANY THE SALESMAN

SELECT * 
FROM emp
WHERE SAL > ANY(
    SELECT SAL 
    FROM emp
    WHERE JOB = "SALESMAN"
);

--WQTD MANAGER DETAILS OF KARAN

SELECT *
FROM emp
WHERE EID IN (SELECT MGR FROM EMP WHERE FNAME = 'KARAN') ;

-- WQTD DETIALS OF THE EMP WHO ARE REPOTING TO KIRAN
SELECT *
FROM emp
WHERE MGR IN (SELECT EID FROM EMP WHERE FNAME = 'KIRAN') ;


-- WQTD DETAILS OF THE EMP WHO ARE REPORTING TO MURULI MANAGER?
SELECT *
FROM EMP
WHERE MGR IN (
    SELECT EID
    FROM emp
    WHERE FNAME = 'Muruli'
);