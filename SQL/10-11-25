-- WQTD max,min,AVG,SAL FROM EMP
SELECT MAX(SAL),MIN(SAL),AVG(SAL),SUM(SAL)
FROM EMP;

-- WQTD NUMBER OF EMP WHO ARE WORKING AS SALSEMAN
SELECT COUNT(*)
FROM EMP
WHERE JOB = 'SALESMAN';

SELECT COUNT(*),DNO
FROM EMP
GROUP BY DNO;

SELECT SUM(SAL)'SUM ',JOB
FROM EMP
WHERE JOB IN ('MANAGER','SALESMAN','DEVELOPER')
GROUP BY JOB;

SELECT COUNT(DISTINCT(JOB)) 'COUNT OF JOB ROLL'
FROM EMP;


SELECT MAX(SAL),DNO 
FROM EMP
GROUP BY DNO
HAVING MAX(SAL) > 50000;

SELECT MAX(SAL),MIN(SAL),JOB
FROM EMP
WHERE SAL > 32000
GROUP BY JOB
HAVING COUNT(*) >= 3;


SELECT COUNT(*)
FROM emp;

SELECT COUNT(*),DNO
FROM EMP 
GROUP BY DNO;

SELECT SUM(SAL),JOB 
FROM EMP 
WHERE JOB IN ('SALESMAN','MANAGER','DEVELOPER')
GROUP BY JOB ;

SELECT MAX(SAL),JOB 
FROM EMP 
GROUP BY JOB 
HAVING MAX(SAL) > 50000;

SELECT max(sal),MIN(SAL),DNO  
FROM EMP 
WHERE SAL >= 32000
GROUP BY DNO
HAVING COUNT(*) >= 3;
